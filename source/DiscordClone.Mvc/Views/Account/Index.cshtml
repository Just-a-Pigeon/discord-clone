@using signalRChatMVC.ViewModels
@model FriendListViewModel;

<h1>The friends page </h1>
<div>
    <div id="search">
        <h2>Search for friends</h2>
        <form method="post">
            <input asp-for="SearchTerm" type="text" placeholder="username or name"/>
            <button type="submit" value="search" class="bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded" asp-action="Index">Search</button>
        </form>
        <partial name="Search" model="Model"/>
    </div>
    <br/>
    <br/>
    <div id="friendlist">
        <h2>FriendList</h2>
          <partial name="FriendList"  model="Model" />
    </div>
 

</div>